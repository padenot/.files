#!/usr/bin/zsh

# Create a timelapse using screenshots

mkdir timelapse_frames_desktop
cd timelapse_frames_desktop
# in seconds
if [ -z $1 ]
then
  duration=10
else
  duration=$1
fi
# 25 frames/second
frames=$((duration * 25))
for i in $(seq $frames)
do
  scrot -q 100 image$i.png
done

ffmpeg -b 8000k -i image%d.png out.ogv
