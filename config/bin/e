#!/bin/sh -xe


if ! pgrep -x "nvim --headless"
then
  echo "Running headless vim"
  nohup nvim --headless &
fi

if ! pgrep "neovide"
then
  echo "Running neovide"
  nohup neovide --remote-tcp=localhost:6666 --multiGrid &
fi

nvr --servername localhost:6666 $*

# this shouldn't be necessary but is
nvr -c ':colorscheme solarized8'

wmctrl -a Neovide
