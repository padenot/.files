[user]
  email = paul@paul.cx
  name = Paul Adenot
[color]
  ui = auto
[push]
  default = simple
[core]
  editor = nvim
  pager = less -+F
[alias]
  co = checkout
  cob = checkout -b
  dif = diff
  staged = diff --staged
  dif = diff
[secrets]
  patterns = cli-[a-zA-Z0-9_]*

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true

[interactive]
    diffFilter = delta --color-only
